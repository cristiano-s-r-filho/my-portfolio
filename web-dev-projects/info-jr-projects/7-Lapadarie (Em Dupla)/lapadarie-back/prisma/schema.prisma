// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Counter {
  idCount Int @id
  peopleSum Int 
  breadSum Int
  entry Int
}

model Customer {
  id Int @id @default(autoincrement())
  name String
  breads Int
  cash Float
}
